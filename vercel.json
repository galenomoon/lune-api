{
  "version": 2,
  "builds": [
    {
      "src": "dist/main.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/api/v1/health"
    },
    {
      "src": "/(.*)",
      "dest": "dist/main.js"
    }
  ],
  "crons": [
    {
      "path": "/api/v1/trial-students/cron/update-past",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/v1/worked-hours/cron/create-batch",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/v1/expenses/cron/update-status",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/v1/expenses/cron/reset-monthly",
      "schedule": "0 2 1 * *"
    }
  ],
  "env": {
    "PRISMA_CLI_BINARY_TARGETS": "rhel-openssl-1.0.x,linux-musl-openssl-3.0.x"
  }
}